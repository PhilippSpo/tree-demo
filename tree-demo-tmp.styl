@import 'nib'

/* CSS declarations go here */
body {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
html, body, .viewport
	width: 100%;
	height: 100%;
	margin: 0;

.wrapper {
	display: flex;  
	height: 100%;

	flex-flow: row;

	font-weight: bold;
	text-align: center;

	align-items: stretch;
}

.wrapper > * {
	flex: 1 100%;
}

.main {
	padding: 10px
	text-align: left;
	background: rgba(0,0,0,0.1);
}

.aside-1 {
	background: #fff;
	box-shadow: 1px 0px 5px 0px rgba(0,0,0,0.2);
}

